{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "prisma/schema.prisma",
        "outDir": "dist"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
